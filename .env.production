# Project Metadata
PROJECT_NAME=cedrina
VERSION=0.1.0
APP_ENV=production
DEBUG=false

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=8
RELOAD=false

# Logging
LOG_LEVEL=INFO
LOG_JSON=true

# Security
SECRET_KEY=production-secret-key-12345678901234567890123456789012
ALLOWED_ORIGINS=["https://example.com"]

# Database
POSTGRES_USER=cedrina_prod
POSTGRES_PASSWORD=prod_secure_password_123456789012
POSTGRES_DB=cedrina_prod
POSTGRES_HOST=prod-postgres.example.com
POSTGRES_PORT=5432
POSTGRES_SSL_MODE=require
POSTGRES_POOL_SIZE=20
POSTGRES_MAX_OVERFLOW=40
POSTGRES_POOL_TIMEOUT=30
DATABASE_URL=postgresql+psycopg2://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?sslmode=${POSTGRES_SSL_MODE}

# Redis
REDIS_HOST=prod-redis.example.com
REDIS_PORT=6379
REDIS_PASSWORD=prod_redis_secure_password_123456789012
REDIS_SSL=true
REDIS_URL=rediss://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0