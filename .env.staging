# Project Metadata
PROJECT_NAME=cedrina
VERSION=0.1.0
APP_ENV=staging
DEBUG=false

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
RELOAD=false

# Logging
LOG_LEVEL=INFO
LOG_JSON=true

# Security
SECRET_KEY=staging-secret-key-12345678901234567890123456789012
ALLOWED_ORIGINS=["https://staging.example.com"]

# Database
POSTGRES_USER=cedrina_staging
POSTGRES_PASSWORD=staging_secure_password_123456789012
POSTGRES_DB=cedrina_staging
POSTGRES_HOST=staging-postgres.example.com
POSTGRES_PORT=5432
POSTGRES_SSL_MODE=require
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=20
POSTGRES_POOL_TIMEOUT=30
DATABASE_URL=postgresql+psycopg2://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?sslmode=${POSTGRES_SSL_MODE}

# Redis
REDIS_HOST=staging-redis.example.com
REDIS_PORT=6379
REDIS_PASSWORD=staging_redis_secure_password_123456789012
REDIS_SSL=true
REDIS_URL=rediss://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0