# Project Metadata
PROJECT_NAME=cedrina
VERSION=0.1.0
APP_ENV=test
DEBUG=true

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
RELOAD=false

# Logging
LOG_LEVEL=DEBUG
LOG_JSON=false

# Security
SECRET_KEY=test-secret-key-12345678901234567890123456789012
ALLOWED_ORIGINS=["http://localhost:8000", "http://127.0.0.1:8000"]

# Database
POSTGRES_USER=cedrina_test
POSTGRES_PASSWORD=test_secure_password_123456789012
POSTGRES_DB=cedrina_test
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_SSL_MODE=prefer
POSTGRES_POOL_SIZE=5
POSTGRES_MAX_OVERFLOW=10
POSTGRES_POOL_TIMEOUT=30
DATABASE_URL=postgresql+psycopg2://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?sslmode=${POSTGRES_SSL_MODE}

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=test_redis_secure_password_123456789012
REDIS_SSL=false
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0

# Docker
ENABLE_LOCAL_POSTGRES=true
ENABLE_LOCAL_REDIS=true